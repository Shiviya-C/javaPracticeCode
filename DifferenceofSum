import java.util.*;

class DifferenceOfSum {
    public static void main(String[] args) {
        Scanner obj = new Scanner(System.in);
        int n = obj.nextInt();
        int m = obj.nextInt();
        int temp1=0,temp2=0;
        for(int i=1 ; i<=m ;i++){
            if(i%n==0)
              temp1 += i;
            else
            temp2 += i;
        }
        System.out.printf("%d",temp2-temp1);
    }
}
